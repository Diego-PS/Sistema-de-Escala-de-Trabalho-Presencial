{
  "compilerOptions": {
    "target": "es2017",                                  
    "module": "commonjs",
    "allowJs": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,                                                
    "skipLibCheck": true                               
  },
  "exclude": ["node_modules"],
  "include": ["./src", "./cypress", "integration"],
  "isolatedModules": false,
  "types": ["node", "cypress"]
}
